{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "types": ["node", "express", "vite/client"],
    "allowSyntheticDefaultImports": true,   //Added and set to true to help with express import issues in main.ts
    "esModuleInterop": true,                //Added and set to true to help with express import issues in main.ts
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
